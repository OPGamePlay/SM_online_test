{
  "compilerOptions": {
    "useDefineForClassFields": true,
    "importsNotUsedAsValues": "remove",
    "lib": [
      "ESNext",
    ],
    "target": "es6",
    "module": "CommonJS",
    "moduleResolution": "Node",
    "strict": true,
    "sourceMap": false,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "esModuleInterop": true,
    "noImplicitReturns": true,
    "skipLibCheck": true,
    "noUncheckedIndexedAccess": true,
    "strictNullChecks": true,
  },
  "buildOptions": {
    "verbose": true
  },
  "include": [
    "src",
    "public/spellmasons-mods/build/SpellmasonsMods.cjs.js"
  ],
  "exclude": [
    "src/types/globalTypesMain.d.ts",
    "src/graphics/**",
    "src/Audio.ts",
  ]
}